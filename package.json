{
  "name": "dating-app-like",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "engine": {
    "node": ">=18.10.0",
    "npm": ">=9.5.0"
  },
  "dependencies": {
    "@types/compression": "^1.7.5",
    "axios": "^1.6.7",
    "bcrypt": "^5.1.1",
    "compression": "^1.7.4",
    "dotenv": "^16.4.1",
    "express": "^4.18.2",
    "express-http-context": "^1.2.4",
    "express-openapi-validator": "^5.1.3",
    "helmet": "^7.1.0",
    "http-graceful-shutdown": "^3.1.13",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.11.3",
    "typeorm": "^0.3.20"
  },
  "devDependencies": {
    "@apidevtools/json-schema-ref-parser": "^11.1.0",
    "@types/bcrypt": "^5.0.2",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.11.16",
    "@types/pg": "^8.11.0",
    "eslint": "^8.54.0",
    "lint-staged": "^15.0.2",
    "prettier": "2.8.8",
    "swagger-parser": "^10.0.3",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0"
  },
  "scripts": {
    "start": "ts-node-dev --poll --transpile-only --respawn src/server.ts --watch src/server.ts",
    "lint": "eslint --ignore-path .eslintignore --ext .ts,.js .",
    "lint:fix": "eslint --ignore-path .eslintignore --ext .ts,.js --fix .",
    "test": "cross-env NODE_ENV=test APP_ENV=test jest --verbose --runInBand --collectCoverage=true --detectOpenHandles --forceExit ./tests",
    "build": "rm -rf dist && tsc",
    "migration:create": "ts-node ./node_modules/typeorm/cli.js migration:create",
    "migration:generate": "ts-node ./node_modules/typeorm/cli.js -d src/libs/typeorm/ormconfig-cli.ts migration:generate",
    "migration:run": "ts-node ./node_modules/typeorm/cli.js -d src/libs/typeorm/ormconfig-cli.ts migration:run",
    "migration:revert": "ts-node ./node_modules/typeorm/cli.js -d src/libs/typeorm/ormconfig-cli.ts migration:revert",
    "format": "prettier --config .prettierrc.js --write './**/*.{js,ts,json,yml,yaml}'",
    "format:check": "prettier --config .prettierrc.js --check './**/*.{js,ts,json,yml,yaml}'",
    "generate-error-map": "ts-node src/cmd/generate-error-map generate"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,js,json}": [
      "npm run format"
    ],
    "*.{ts,js}": [
      "eslint"
    ]
  },
  "author": "",
  "license": "ISC"
}
